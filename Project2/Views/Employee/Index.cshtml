@model IEnumerable<DAL.Entities.Employee>

<h2>Employees</h2>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <td>@employee.FirstName @employee.LastName</td>
                <td>@employee.Email</td>
                <td>
                    <a href="@Url.Action("Edit", new { id = employee.Id })">Edit</a> |
                    <a href="@Url.Action("Delete", new { id = employee.Id })">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

