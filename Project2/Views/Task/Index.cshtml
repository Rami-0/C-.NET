@model IEnumerable<DAL.Entities.TaskProject>

<h2>Tasks</h2>

<table class="table">
    <thead>
        <tr>
            <th>Task Name</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var task in Model)
        {
            <tr>
                <td>@task.Name</td>
                <td>@task.Status</td>
                <td>
                    <a href="@Url.Action("Edit", new { id = task.Id })">Edit</a> |
                    <a href="@Url.Action("Delete", new { id = task.Id })">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
